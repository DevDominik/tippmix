<Page x:Class="Tippmixx.OrganizerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tippmixx"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrganizerPage">

    <Grid>
        <StackPanel Margin="20">
            <!-- Search Box -->
            <TextBox x:Name="tbOrganizerSearch" Width="300" Height="30" 
                     TextChanged="tbOrganizerSearch_TextChanged" 
                     Margin="0,0,0,20"/>

            <DataGrid x:Name="dtgEvents" Width="Auto" Height="300" 
                      SelectionChanged="dtgEvents_SelectionChanged" 
                      AutoGenerateColumns="True" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
